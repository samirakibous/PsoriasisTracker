<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment"
    android:layout_marginBottom="8dp"
    android:background="#E8E6E6">



    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/back_acc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/user"
                android:contentDescription="@string/welcome"/>

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user@email.com"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginVertical="12dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView6"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/SettingsItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/round_back_while"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingHorizontal="8dp"
                    android:contentDescription="@string/view_more"
                    android:src="@drawable/baseline_email_24"
                    app:tint="@color/private_account" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="start|top"
                        android:paddingHorizontal="8dp"
                        android:text="Email"
                        android:textSize="16sp"
                        android:textColor="@color/private_account" />

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:paddingHorizontal="8dp"
                        android:text="user@email.com"
                        android:textSize="13sp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_height="1dp"
                android:background="@color/private_account" />

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_height="1dp"
                android:background="@color/purple_500" />

            <LinearLayout
                android:id="@+id/passwordChange"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/round_back_while"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:paddingHorizontal="8dp"
                    android:contentDescription="@string/view_more"
                    android:src="@drawable/baseline_lock_24"
                    app:tint="@color/private_account" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="start|top"
                        android:paddingHorizontal="8dp"
                        android:text="Mot de passe"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:paddingHorizontal="8dp"
                        android:text="********************"
                        android:textSize="13sp"
                        android:textColor="@color/black" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageChangePasswordArrow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_weight="1"
                    android:contentDescription="@string/view_more"
                    android:paddingHorizontal="8dp"
                    android:src="@drawable/baseline_arrow_back_24"
                    app:tint="@color/purple" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
